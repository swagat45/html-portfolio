#include <iostream>
#include <fstream>

int main(int argc, char* argv[]) {
    if (argc != 3) {
        std::cerr << "Usage: " << argv[0] << " <source_file> <destination_file>\n";
        return 1;
    }

    const char* sourceFileName = argv[1];
    const char* destinationFileName = argv[2];

    std::ifstream sourceFile(sourceFileName);
    if (!sourceFile) {
        std::cerr << "Error: Unable to open source file: " << sourceFileName << "\n";
        return 1;
    }

    std::ofstream destinationFile(destinationFileName);
    if (!destinationFile) {
        std::cerr << "Error: Unable to open destination file: " << destinationFileName << "\n";
        return 1;
    }

    // Copying contents from source to destination
    char ch;
    while (sourceFile.get(ch)) {
        destinationFile.put(ch);
    }

    std::cout << "File copy successful.\n";

    // Close the files
    sourceFile.close();
    destinationFile.close();

    return 0;
}
